class Sayilar():
    def __init__(self, sayiListesi):
        self.sayiListesi = sayiListesi
    def besinkati(self):
        self.besinkati = []
        for i in self.sayiListesi:
            if i % 5 == 0:
                self.besinkati.append(i)
        return self.besinkati
    def besinkatidegil(self):
        pass
print(Sayilar([1,2,3,4,5]).besinkati())


