class Sayilar():
    def __init__(self, sayiListesi):
        self.sayiListesi = sayiListesi
    def tek(self):
        self.tek = []
        for i in self.sayiListesi:
            if i % 2 == 1:
                self.tek.append(i)
        return self.tek
    def cift(self):
        pass
print(Sayilar([1,2,3,4,5]).tek())

